{
  "compilerOptions": {
    // Change target to ES2020 or newer if needed, ES2020 supports import.meta
    "target": "ES2020",

    // CRITICAL: Change module and moduleResolution to NodeNext or ESNext
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Keep other settings like outDir, rootDir, strict, etc.
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}